<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css" />
    <title>Live Alerts</title>
  </head>
  <body class="container">
    <!-- <% const {HOME, SIGNIN, LOGOUT, LIVE_ALERTS, ABOUT} = locals.paths %>  -->
    <% if (typeof showNavbar !== 'undefined' && showNavbar) { %>
    <nav>
      <ul>
        <li>
          <a href="<%= HOME.path %>"><strong><%= HOME.text %></strong></a>
        </li>
      </ul>

      <ul>
        <!---------------------------------------------------------------------------------------------------->
        <!-- IF USER IS LOGGED -->
        <% if (locals.user) { %>
        <li><i>Welcome <%= locals.user.username %> </i></li>
        <li>
          <a href="<%= LIVE_ALERTS.path %>"><%= LIVE_ALERTS.text %></a>
        </li>
        <li><a href="<%= LOGOUT.path %>"><%= LOGOUT.text %></a></li>

        <% } else { %>
        <!---------------------------------------------------------------------------------------------------->
        <!-- IF USER IS UNLOGGED -->
        <li><a href="<%= SIGNIN.path %>"><%= SIGNIN.text %></a></li>
        <% } %>
      </ul>
    </nav>
    <% } %>
  </body>
</html>
